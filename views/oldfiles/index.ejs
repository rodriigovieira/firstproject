<% include partials/header.ejs %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>This is my first complete application.</p>
            <p><a class="btn btn-primary btn-lg" href="/index/new">New POST request</a></p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(jesus) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= jesus.image %>">
                </div>
                <div class="caption">
                    <h4><%= jesus.name %></h4>
                </div>
                <p>
                    <a href="/index/<%= jesus._id %>" class="btn btn-primary">Learn More</a>
                </p>
            </div>
        <% }); %>
    </div>
<center>    <button class="btn btn-default"><strong><a href="/">Return.</a></strong></button>
    <button class="btn btn-default"><a href="/index/new">Make a new POST request.</a></button></<center>
