<% include ./oldfiles/partials/header.ejs %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Editing the post <%= campgrounds.name %>.</h1>
        <div style="width:30%; margin: 0 auto;">
            <form action="/index/<%= campgrounds._id %>/?_method=PUT" method="post">
                <div class="form-group">
                    <input placeholder="Post name" required class="form-control" type="text"
                           value="<%= campgrounds.name %>" name="datadb[name]">
                </div>
                <div class="form-group">
                    <input placeholder="Image URL" required class="form-control" type="text"
                           value="<%= campgrounds.image %>" name="datadb[image]">
                </div>
                <div class="form-group">
                    <input step="0.01" placeholder="Price" required class="form-control" type="number"
                           value="<%= campgrounds.price %>" name="datadb[price]">
                </div>
                <div class="form-group">
                    <input placeholder="Post description" required class="form-control" type="text"
                           value="<%= campgrounds.desc %>" name="datadb[desc]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
        <br>
        <strong><a href="/">Return.</a></strong></div>
</div>
<% include ./oldfiles/partials/footer.ejs %>